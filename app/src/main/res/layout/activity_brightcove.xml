<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/spotxgreen">

    <com.brightcove.player.view.BrightcoveVideoView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/video_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </com.brightcove.player.view.BrightcoveVideoView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SpotX Brightcove Plugin"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preroll"
        android:id="@+id/prerollCheckBox"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/midrollCheckBox"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Midroll (5 sec)"
        android:id="@+id/midrollCheckBox"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:checked="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postroll"
        android:id="@+id/postrollCheckBox"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/midrollCheckBox"/>

    <EditText
        android:visibility="visible"
        android:id="@+id/channelText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="25sp"
        android:inputType="number"
        android:textColorHint="@color/common_signin_btn_light_text_disabled"
        android:background="#dedede"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="85394"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Channel Id"
        android:id="@+id/textView6"
        android:layout_below="@+id/midrollCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#7d7d7d"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Play"
        android:textColor="@color/spotxblue"
        android:textStyle="bold"
        android:layout_below="@+id/channelText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>